@model FPTBook.Models.DTO.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h1>Login</h1>
    <form asp-action="Login" class="form-horizontal" method="post">
        <div class="row">
            <div class="form-group">
                <label class="col-sm-2 control-label">Email(*): </label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
                    <div class="msg">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Password(*): </label>
                <div class="col-sm-10">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                    <div class="msg">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                </div>
            </div>
            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <span class="text-danger">@TempData["msg"]</span>
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <a href="/UserAuthentication/Registration">Not have an account! Sign Up here.</a>
                </div>
            </div>
        </div>
    </form>
</div>